doctype html
html
  head
    title Ping Test
  body
    h1 Ping Test

    h2 Weather Report 
    div
      h3 Location: #{report.location}
      h3 Temperature: #{report.temperature}
      h3 Condition: #{report.condition}

    form(action="/ping" method="POST")
      label(for="domain") Domain:
      input(type="text" id="domain" name="domain" required)
      button(type="submit") Ping
